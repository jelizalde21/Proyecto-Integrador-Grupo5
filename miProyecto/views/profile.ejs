	<!-- /Head -->
    <%- include('./partials/head') %> 
	<!-- /Head -->

<body>
    
    <!-- /Header -->
		
    <% if (logueado) { %>
    <%- include('./partials/headerLogueado')%>
    <% } else { %>
    <%- include('./partials/headerDeslogueado')%>
    <% } %>
    
    <!-- /Header -->

    <main>
        <div class="uk-section uk-section-small">
            <div class="uk-container uk-container-small">
                <section class="info-usuario uk-flex uk-flex-around uk-width-1-1">
                    <div class="uk-width-1-3 uk-flex uk-flex-center uk-flex-middle">
                        <img src="/images/portadas/<%= users.picture %>" alt="foto de perfil" class="foto-perfil">
                    </div>
                    <div class="uk-width-2-3 uk-flex uk-flex-column uk-flex-around">
                        <div class="uk-flex uk-flex-middle">
                            <h3 class="uk-margin-remove"><%= users.username %></h3>
                            <a href="profile/edit" uk-icon="icon:cog; ratio: 1.2" class="uk-margin-left"></a>
                        </div>
                        <div>
                            <ul class="red-usuario uk-flex uk-flex-between uk-width-1-2">
                                <li><%= users.nro_posts %> posts</li>
                                <li>300 M seguidores</li>
                                <li>5 seguidos</li>
                            </ul>
                        </div>
                    </div>

                </section>

                <section class="muro uk-flex uk-flex-middle uk-flex-center">
                    <div class="uk-grid uk-child-width-1-3 uk-width-1-1 uk-margin-remove" uk-grid>
                        
                        <% for( let i = 0; i < users.posteosU.length; i++ ) { %>
                        <div class="uk-card uk-card-hover uk-card-body uk-flex uk-flex-column uk-flex-middle uk-flex-center ">
                            <a href="detail/post/id/<%= users.posteosU[i].id %>" class="link-detalle">
                                <img src="/images/<%= users.posteosU[i].picture %> " alt="foto de perfil" class="foto-perfil">
                                <p class="uk-text-center"> <%= users.posteosU[i].caption %> </p>
                            </a>
                        </div>
                        <% } %>                        
                    </div>
                </section> 
            </div>
        </div>
    </main>

    <!-- /Head -->
    <%- include('./partials/footer') %> 
	<!-- /Head -->



</body>

</html>