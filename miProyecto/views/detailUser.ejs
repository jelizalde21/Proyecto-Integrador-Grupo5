	<!-- /Head -->
    <%- include('./partials/head') %> 
	<!-- /Head -->

<body>
    
    <!-- /Header -->
		
    <% if (logueado) { %>
    <%- include('./partials/headerLogueado')%>
    <% } else { %>
    <%- include('./partials/headerDeslogueado')%>
    <% } %>

    <!-- /Header -->

    <main>
        <div class="uk-section uk-section-small">
            <div class="uk-container uk-container-small">
                <section class="info-usuario uk-flex uk-flex-around uk-width-1-1">
                    <div class="uk-width-1-3 uk-flex uk-flex-center uk-flex-middle">
                        <img src="/images/portadas/<%= user.picture %> " alt="foto de perfil" class="foto-perfil">
                    </div>
                    <div class="uk-width-2-3 uk-flex uk-flex-column uk-flex-around">
                        <div class="uk-flex uk-flex-middle">
                            <h2 class="uk-margin-remove"><%= user.username %></h2>
                            <button class="uk-button uk-button-small uk-button-primary uk-margin-left">Seguir</button>
                        </div>
                        <div>
                            <h4 class="uk-margin-remove"><%= user.nombre %> <%= user.apellido %></h4>
                        </div>
                        <div>
                            <ul class="red-usuario uk-flex uk-flex-between uk-width-1-2">
                                <li><%=user.posteosU.length%> posts</li>
                                <li>200 seguidores</li>
                                <li>300 seguidos</li>
                            </ul>
                        </div>
                    </div>
               </section>
               <form action="/results/searchUser" class="uk-search uk-search-default">
                <span uk-search-icon></span>
                <input type="search" class="uk-search-input" placeholder="Buscar..." name="search" style='border:black solid 1px'>
                <!-- <a href="../results" ></a> --> 
            </form>
               <section class="muro uk-flex uk-flex-middle uk-flex-center">
                    <div class="uk-grid uk-child-width-1-3 uk-width-1-1 uk-margin-remove" uk-grid>
                        <% for( let i = 0; i < user.posteosU.length; i++ ) { %>
                        <div class="uk-card uk-card-hover uk-card-body uk-flex uk-flex-column uk-flex-middle uk-flex-center ">
                            <a href="/detail/post/id/<%= user.posteosU[i].id %>" class="link-detalle">
                                <img src="/images/<%= user.posteosU[i].picture %> " alt="foto de perfil" class="foto-perfil">
                                <p class="uk-text-center"> <%= user.posteosU[i].caption %> </p>
                            </a>
                        </div>
                        <% } %>
                        
                    </div>
               </section>
            </div>
        </div>
    </main>

    <!-- /Head -->
    <%- include('./partials/footer') %> 
	<!-- /Head -->


</body>

</html>